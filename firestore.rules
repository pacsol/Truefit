rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/write their own user doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Profiles — owner only
    match /profiles/{profileId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Job searches — owner only
    match /job_searches/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Job posts — any authenticated user can read
    match /job_posts/{docId} {
      allow read: if request.auth != null;
    }

    // Job matches — owner only
    match /job_matches/{docId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Resumes — owner only
    match /resumes_original/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /resumes_parsed/{docId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    match /resume_versions/{docId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // ATS scores — readable by resume owner (checked via API)
    match /ats_scores/{docId} {
      allow read: if request.auth != null;
    }

    // Loop state — owner only
    match /loop_state/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Digest runs — owner only
    match /digest_runs/{docId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Feedback — owner only
    match /feedback/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
